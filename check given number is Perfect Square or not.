#include <stdio.h>
void main() {
int num, i, isPerfectSquare = 0;
printf("Enter a number: ");
scanf("%d", &num);
for (i = 1; i <= num / 2; i++) {
if (i * i == num) {
isPerfectSquare = 1;
break;
}
}
if (num == 1)
isPerfectSquare = 1;
if (isPerfectSquare)
printf("%d is a Perfect Square.\n", num);
else
printf("%d is not a Perfect Square.\n", num);
}
