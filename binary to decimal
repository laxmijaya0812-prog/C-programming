#include <stdio.h>
#include <math.h>

int main() {
    int binary, decimal = 0, base = 1, remainder;

    printf("Enter a binary number: ");
    scanf("%d", &binary);

    while (binary > 0) {
        remainder = binary % 10;      
        decimal = decimal + remainder * base;
        binary = binary / 10;         
        base = base * 2;              
    }

    printf("Decimal = %d\n", decimal);

    return 0;
}
